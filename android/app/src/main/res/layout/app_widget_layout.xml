<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_background_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#F778BA">
    <ImageView
        android:id="@+id/widget_trex_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/img_trex_normal"
        android:layout_gravity="bottom|center_horizontal"
        android:adjustViewBounds="true"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/widget_streak_icon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_streak"
                android:tint="#FFFFFF"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/widget_streak_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="44sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/widget_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy luyện tập nào!"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/widget_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VocabuRex"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingBottom="8dp"/>

</FrameLayout>